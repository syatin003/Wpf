<telerik:RadWindow x:Class="EventManagementSystem.Views.Admin.Members.Category.AddMembershipCategoryView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
                   mc:Ignorable="d"
                   d:DesignHeight="700" d:DesignWidth="500"
                   ResizeMode="NoResize"
                   WindowStartupLocation="CenterOwner"             
                   Style="{StaticResource RadWindowStyle}"
                   Header=" Add Category"
                   Width="720"
                   Height="740">
    <telerik:RadWindow.Icon>
        <Image Source="{StaticResource ImageCategory26}"
               Height="16"
               Width="16" />
    </telerik:RadWindow.Icon>

    <telerik:RadBusyIndicator IsBusy="{Binding IsBusy, FallbackValue=True}">

        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="Margin" Value="5"></Setter>
                    </Style>
                    <Style TargetType="{x:Type telerik:RadComboBox}">
                        <Setter Property="Margin" Value="5"></Setter>
                    </Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="Margin" Value="5 0 5 0"></Setter>
                        <Setter Property="VerticalAlignment" Value="Center"></Setter>
                    </Style>
                </Grid.Resources>

                <TextBlock Text="Name" Grid.Column="0"  Grid.Row="0" />
                <TextBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="0" 
                    Text="{Binding MembershipCategory.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>

                <TextBlock Text="Description" Grid.Column="0" Grid.Row="1" />
                <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" 
                     Height="40" Text="{Binding MembershipCategory.MembershipCategory.Description, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>



                <TextBlock Text="Style" Grid.Column="0" Grid.Row="2" />
                <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="2"
                                         ItemsSource="{Binding MembershipGroupStyles}"
                                         SelectedItem="{Binding MembershipCategory.MembershipGroupStyle, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name" />
                <TextBlock Text="Age" Grid.Column="2" Grid.Row="2" />
                <telerik:RadComboBox Grid.Column="3"
                                         Grid.Row="2"
                                         ItemsSource="{Binding MembershipGroupAges}"
                                         SelectedItem="{Binding MembershipCategory.MembershipGroupAge, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name" />
                <TextBlock Text="Group" Grid.Column="0" Grid.Row="3" />
                <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="3"
                                         ItemsSource="{Binding MembershipGroups}"
                                         SelectedItem="{Binding MembershipCategory.MembershipGroup, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name" />
                <TextBlock Text="Type" Grid.Column="2" Grid.Row="3" />
                <telerik:RadComboBox Grid.Column="3"
                                         Grid.Row="3"
                                         ItemsSource="{Binding CategoryTypes}"
                                         SelectedItem="{Binding MembershipCategory.CategoryType, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Current Category" Grid.Column="0" Grid.Row="4" />
                <CheckBox Grid.Column="1" Grid.Row="4"
                      Margin="5"
                      IsChecked="{Binding MembershipCategory.MembershipCategory.CurrentCategory, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Gender" Grid.Column="2" Grid.Row="4" />

                <Grid Grid.Column="3" Grid.Row="4" Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <RadioButton GroupName="Gender" Grid.Column="0"  IsChecked="{Binding MembershipCategory.IsMale,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="Male"/>
                    <RadioButton GroupName="Gender" Grid.Column="1" IsChecked="{Binding MembershipCategory.IsFemale,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="Female"/>
                    <RadioButton GroupName="Gender" Grid.Column="2" IsChecked="{Binding MembershipCategory.IsBoth,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Content="Both"/>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Margin="10">
                <telerik:RadTabControl>
                    <telerik:RadTabItem Header="Group Defaults">
                        <telerik:RadTabControl Margin="5">
                            <telerik:RadTabItem Header="Group">
                                <Grid>
                                    <Grid x:Name="Overlay" Visibility="{Binding MembershipCategory.MembershipGroup,Converter={StaticResource NullToVisibilityConverter},ConverterParameter=Invert}"
              Panel.ZIndex="1000">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="143*"/>
                                            <ColumnDefinition Width="529*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.Background>
                                            <SolidColorBrush Color="White"
                                 Opacity=".7" />
                                        </Grid.Background>
                                    </Grid>

                                    <Grid Margin="10" IsEnabled="{Binding MembershipCategory.MembershipGroup,Converter={StaticResource NullToBooleanConverter}}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.Resources>
                                            <Style TargetType="{x:Type telerik:RadNumericUpDown}">
                                                <Setter Property="Margin" Value="3"/>
                                                <Setter Property="MinHeight" Value="3"/>
                                            </Style>
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="Margin" Value="3"></Setter>
                                            </Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Margin" Value="3"/>
                                                <Setter Property="VerticalAlignment" Value="Center"></Setter>
                                            </Style>
                                        </Grid.Resources>

                                        <TextBlock Text="Name" Grid.Column="0" Grid.Row="0"/>
                                        <TextBox Text="{Binding MembershipCategory.MembershipCategoryGroupDefault.Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                 Grid.Column="1" Grid.Row="0" />

                                        <TextBlock Text="Description" Grid.Column="0" Grid.Row="1" />
                                        <TextBox Height="40" Text="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Description, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"                 
                     Grid.Column="1" Grid.Row="1" />

                                        <TextBlock Text="Member On Bank Holidays" Grid.Column="0" Grid.Row="2"/>
                                        <StackPanel Grid.Column="1" Grid.Row="2" Margin="2" Orientation="Horizontal">
                                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MemberOnBankHolidays, UpdateSourceTrigger=PropertyChanged}"/>
                                            <TextBlock Text="Member At Christmas Week" Margin="50 0 10 0"/>
                                            <CheckBox VerticalAlignment="Center" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MemberAtChristmasWeek, UpdateSourceTrigger=PropertyChanged}"/>
                                        </StackPanel>

                                        <GroupBox Header="Days Available"
                                          Foreground="DimGray"
                                          Grid.Row="3"
                                          Grid.Column="0" Margin="0 5 10 0">
                                            <StackPanel HorizontalAlignment="Center" Margin="5">
                                                <CheckBox Margin="5 10 0 5" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.IsMonAvailable, UpdateSourceTrigger=PropertyChanged}"
                                  Content="Monday"/>
                                                <CheckBox Margin="5 10 0 5" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.IsTuesAvailable, UpdateSourceTrigger=PropertyChanged}"
                                  Content="Tuesday"/>
                                                <CheckBox Margin="5 10 0 5" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.IsWedAvailable, UpdateSourceTrigger=PropertyChanged}"
                                  Content="Wednesday"/>
                                                <CheckBox Margin="5 10 0 5" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.IsThursAvailable, UpdateSourceTrigger=PropertyChanged}"
                                      Content="Thursday"/>
                                                <CheckBox  Margin="5 10 0 5" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.IsFriAvailable, UpdateSourceTrigger=PropertyChanged}"
                                  Content="Friday"/>
                                                <CheckBox Margin="5 10 0 5" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.IsSatAvailable, UpdateSourceTrigger=PropertyChanged}"
                                  Content="Saturday"/>
                                                <CheckBox Margin="5 10 0 5" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.IsSunAvailable, UpdateSourceTrigger=PropertyChanged}"
                                  Content="Sunday"/>
                                            </StackPanel>
                                        </GroupBox>
                                        <GroupBox Header="Tokens"
                                          Foreground="DimGray"
                                          Grid.Row="3"
                                          Grid.Column="1" Margin="0 5 0 0">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="160"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock Text="Group Token 1" Margin="0 0 10 0" Grid.Row="0" Grid.Column="0" TextAlignment="Right"/>
                                                <TextBox Height="40" Grid.Row="0" Grid.Column="1" Text="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token1, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>

                                                <TextBlock  Text="Group Token 2" Margin="0 0 10 0" Grid.Row="1" Grid.Column="0" TextAlignment="Right"/>
                                                <TextBox Height="40" Grid.Row="1" Grid.Column="1" Text="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token2, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>

                                                <TextBlock  Text="Group Token 3" Margin="0 0 10 0" Grid.Row="2" Grid.Column="0" TextAlignment="Right"/>
                                                <TextBox Height="40" Grid.Row="2" Grid.Column="1" Text="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token3, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>

                                                <TextBlock Text="Group Token 4" Margin="0 0 10 0" Grid.Row="3" Grid.Column="0" TextAlignment="Right"/>
                                                <TextBox Height="40" Grid.Row="3" Grid.Column="1" Text="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token4, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>

                                                <TextBlock Text="Group Token 5" Margin="0 0 10 0" Grid.Row="4" Grid.Column="0" TextAlignment="Right"/>
                                                <TextBox Height="40" Grid.Row="4" Grid.Column="1" Text="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token5, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
                                            </Grid>
                                        </GroupBox>
                                    </Grid>

                                </Grid>
                            </telerik:RadTabItem>

                            <telerik:RadTabItem Header="Group EPOS">
                                <Grid>
                                    <Grid x:Name="OverlayEPOS" Visibility="{Binding MembershipCategory.MembershipGroup,Converter={StaticResource NullToVisibilityConverter},ConverterParameter=Invert}"
              Panel.ZIndex="1000">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="143*"/>
                                            <ColumnDefinition Width="529*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.Background>
                                            <SolidColorBrush Color="White"
                                 Opacity=".7" />
                                        </Grid.Background>
                                    </Grid>

                                    <Grid Margin="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.Resources>
                                            <Style TargetType="{x:Type telerik:RadNumericUpDown}">
                                                <Setter Property="Margin" Value="5"/>
                                                <Setter Property="Padding" Value="0"/>
                                                <Setter Property="MaxHeight" Value="25"/>
                                            </Style>
                                            <Style TargetType="{x:Type TextBox}">
                                                <Setter Property="Margin" Value="5"></Setter>
                                            </Style>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="Margin" Value="5"/>
                                            </Style>
                                        </Grid.Resources>

                                        <TextBlock Text="Allowed Club Card" Grid.Column="0" Grid.Row="0"/>
                                        <CheckBox Grid.Row="0" Grid.Column="1" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.AllowedClubCard, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Text="Points Based Membership" Grid.Column="2" Grid.Row="0"/>
                                        <CheckBox Grid.Row="0" Grid.Column="3" IsChecked="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.PointsBasedMembership, UpdateSourceTrigger=PropertyChanged}"/>

                                        <TextBlock Text="Display Message" Grid.Row="1" Grid.Column="0"/>
                                        <TextBox Grid.Row="1" Grid.Column="1"  Grid.ColumnSpan="3" MaxLength="64" TextWrapping="Wrap" MaxLines="2"
                                     Text="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DisplayMessage, UpdateSourceTrigger=PropertyChanged,ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>

                                        <TextBlock Text="Overdraft Limit 1" Grid.Column="0" Grid.Row="2" />
                                        <telerik:RadNumericUpDown Grid.Row="2" Grid.Column="1" IsInteger="True" Minimum="0"
                                      Value="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.OverdraftLimit1, UpdateSourceTrigger=PropertyChanged}" />

                                        <TextBlock Text="Overdraft Limit 2" Grid.Column="2" Grid.Row="2"/>
                                        <telerik:RadNumericUpDown Grid.Row="2" Grid.Column="3" IsInteger="True" Minimum="0"
                                      Value="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.OverdraftLimit2, UpdateSourceTrigger=PropertyChanged}" />

                                        <GroupBox Header="Product Discounts" Margin="0 10 0 0"
                                          Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4">
                                            <Grid Margin="20 20 0 0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.Resources>
                                                    <Style TargetType="{x:Type telerik:RadNumericUpDown}">
                                                        <Setter Property="Margin" Value="5"/>
                                                        <Setter Property="Padding" Value="0"/>
                                                        <Setter Property="MaxHeight" Value="25"/>
                                                    </Style>
                                                    <Style TargetType="{x:Type TextBlock}">
                                                        <Setter Property="Margin" Value="5"/>
                                                    </Style>
                                                </Grid.Resources>
                                                <TextBlock Text="Discount Rate All"  Grid.Row="0" Grid.Column="0"/>
                                                <telerik:RadNumericUpDown Grid.Row="0" Grid.Column="1" Minimum="0" Value="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRateAll, UpdateSourceTrigger=PropertyChanged}"/>

                                                <TextBlock Text="Discount Rate 1"  Grid.Row="0" Grid.Column="2"/>
                                                <telerik:RadNumericUpDown Grid.Row="0" Grid.Column="3" Minimum="0" Value="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate1, UpdateSourceTrigger=PropertyChanged}"/>

                                                <TextBlock Text="Discount Rate 2"  Grid.Row="1" Grid.Column="0"/>
                                                <telerik:RadNumericUpDown Grid.Row="1" Grid.Column="1" Minimum="0" Value="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate2, UpdateSourceTrigger=PropertyChanged}"/>

                                                <TextBlock Text="Discount Rate 3"  Grid.Row="1" Grid.Column="2"/>
                                                <telerik:RadNumericUpDown Grid.Row="1" Grid.Column="3" Minimum="0" Value="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate3, UpdateSourceTrigger=PropertyChanged}"/>

                                                <TextBlock Text="Discount Rate 4"  Grid.Row="2" Grid.Column="0"/>
                                                <telerik:RadNumericUpDown Grid.Row="2" Grid.Column="1" Minimum="0" Value="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate4, UpdateSourceTrigger=PropertyChanged}"/>

                                                <TextBlock Text="Discount Rate 5"  Grid.Row="2" Grid.Column="2"/>
                                                <telerik:RadNumericUpDown Grid.Row="2" Grid.Column="3" Minimum="0" Value="{Binding MembershipCategory.MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate5, UpdateSourceTrigger=PropertyChanged}"/>

                                            </Grid>
                                        </GroupBox>
                                    </Grid>
                                </Grid>
                            </telerik:RadTabItem>

                        </telerik:RadTabControl>
                    </telerik:RadTabItem>

                    <telerik:RadTabItem Header="Full Payment Costs">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="400"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>

                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="5 5 10 5"/>
                                </Style>
                            </Grid.Resources>

                            <TextBlock Text="Component 1" Grid.Row="0" Grid.Column="0"/>
                            <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="0"
                                         ItemsSource="{Binding MembershipComponents}"
                                         SelectedItem="{Binding MembershipCategory.MembershipFullPaymentComponent.Product, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name"
                                         VerticalAlignment="Center" />
                            <TextBlock Grid.Row="0" Grid.Column="2" TextAlignment="Right" Text="Price" Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product,Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="0" Grid.Column="3" TextAlignment="Right" Text="{Binding MembershipCategory.MembershipFullPaymentComponent.Product.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"
                                           Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product,Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <TextBlock  Text="Component 2" Grid.Row="1" Grid.Column="0"/>
                            <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="1"
                                         ItemsSource="{Binding MembershipComponents}"
                                         SelectedItem="{Binding MembershipCategory.MembershipFullPaymentComponent.Product1, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name"
                                         VerticalAlignment="Center" />
                            <TextBlock Text="Price" Grid.Row="1" Grid.Column="2" TextAlignment="Right" Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product1,Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock  Grid.Row="1" Grid.Column="3" TextAlignment="Right" Text="{Binding MembershipCategory.MembershipFullPaymentComponent.Product1.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"
                                         Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product1,Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <TextBlock  Text="Component 3" Grid.Row="2" Grid.Column="0"/>
                            <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="2"
                                         ItemsSource="{Binding MembershipComponents}"
                                         SelectedItem="{Binding MembershipCategory.MembershipFullPaymentComponent.Product2, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name"
                                         VerticalAlignment="Center" />
                            <TextBlock Text="Price" Grid.Row="2" Grid.Column="2" TextAlignment="Right" Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product2,Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" TextAlignment="Right"  Text="{Binding MembershipCategory.MembershipFullPaymentComponent.Product2.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"
                                           Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product2,Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <TextBlock Text="Component 4" Grid.Row="3" Grid.Column="0"/>
                            <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="3"
                                         ItemsSource="{Binding MembershipComponents}"
                                         SelectedItem="{Binding MembershipCategory.MembershipFullPaymentComponent.Product3, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name"
                                         VerticalAlignment="Center" />
                            <TextBlock Grid.Row="3" Grid.Column="2" TextAlignment="Right" Text="Price"
                                            Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product3, Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" TextAlignment="Right" Text="{Binding MembershipCategory.MembershipFullPaymentComponent.Product3.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"
                                              Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product3, Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <TextBlock Text="Component 5" Grid.Row="4" Grid.Column="0"/>
                            <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="4"
                                         ItemsSource="{Binding MembershipComponents}"
                                         SelectedItem="{Binding MembershipCategory.MembershipFullPaymentComponent.Product4, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name"
                                         VerticalAlignment="Center" />
                            <TextBlock Grid.Row="4" Grid.Column="2" Text="Price" TextAlignment="Right"
                                           Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product4, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="4" Grid.Column="3" TextAlignment="Right" Text="{Binding MembershipCategory.MembershipFullPaymentComponent.Product4.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"
                                           Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product4, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <TextBlock Text="Component 6" Grid.Row="5" Grid.Column="0"/>
                            <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="5"
                                         ItemsSource="{Binding MembershipComponents}"
                                         SelectedItem="{Binding MembershipCategory.MembershipFullPaymentComponent.Product5, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name"
                                         VerticalAlignment="Center" />
                            <TextBlock Grid.Row="5" Grid.Column="2" Text="Price" TextAlignment="Right"
                                           Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product5, Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="5" Grid.Column="3" TextAlignment="Right" Text="{Binding MembershipCategory.MembershipFullPaymentComponent.Product5.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"
                                           Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product5, Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <TextBlock Text="Component 7" Grid.Row="6" Grid.Column="0"/>
                            <telerik:RadComboBox Grid.Column="1"
                                         Grid.Row="6"
                                         ItemsSource="{Binding MembershipComponents}"
                                         SelectedItem="{Binding MembershipCategory.MembershipFullPaymentComponent.Product6, Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"
                                         DisplayMemberPath="Name"
                                         VerticalAlignment="Center" />
                            <TextBlock Grid.Row="6" Grid.Column="2" Text="Price" TextAlignment="Right"
                                            Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product6, Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="6" Grid.Column="3" TextAlignment="Right" Text="{Binding MembershipCategory.MembershipFullPaymentComponent.Product6.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"
                                            Visibility="{Binding MembershipCategory.MembershipFullPaymentComponent.Product6, Mode=TwoWay, Converter={StaticResource NullToVisibilityConverter}}"/>

                            <TextBlock Text="Component 8" Grid.Row="7" Grid.Column="0"/>
                            <telerik:RadComboBox Grid.Column="1"
