                                <TextBlock Text="{Binding MembershipMonthlyPaymentOngoingCost.Product3.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Horizontal"  Visibility="{Binding MembershipMonthlyPaymentOngoingCost.IsAnyOngoingCostComponent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Total" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipMonthlyPaymentOngoingCost.TotalPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>
                            </StackPanel>
                        </Grid>
                    </telerik:RadTabItem>

                    <telerik:RadTabItem Header="Playing Rights">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="5"/>
                                </Style>
                            </Grid.Resources>
                            <TextBlock Text="Max Rounds" Grid.Column="0" Grid.Row="0" FontWeight="Bold" Margin="0 0 0 10"/>

                            <TextBlock Text="Per Week" Grid.Column="0" Grid.Row="1" FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MembershipCategory.MaxRoundsPerWeek}" Visibility="{Binding MembershipCategory.MaxRoundsPerWeek,Converter={StaticResource CountToVisibilityConverter}}"/>
                            <TextBlock  Grid.Row="1" Grid.Column="2" Text="Start Day" FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding StartDayForRoundsPerWeek}"/>

                            <TextBlock Text="Per Month" Grid.Column="0" Grid.Row="2" FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MembershipCategory.MaxRoundsPerMonth}" Visibility="{Binding MembershipCategory.MaxRoundsPerMonth,Converter={StaticResource CountToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="2" Grid.Column="2" Text="Start Date" FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding StartDateForRoundsPerMonth}"/>

                            <TextBlock Text="Per Year" FontWeight="Bold" Grid.Column="0" Grid.Row="3"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding MembershipCategory.MaxRoundsPerYear}" Visibility="{Binding MembershipCategory.MaxRoundsPerYear,Converter={StaticResource CountToVisibilityConverter}}"/>
                            <TextBlock Grid.Row="3" Grid.Column="2" Text="Start Date" FontWeight="Bold"/>
                            <TextBlock Grid.Row="3" Grid.Column="3" Text="{Binding StartDateForRoundsPerYear}"/>

                        </Grid>
                    </telerik:RadTabItem>

                    <telerik:RadTabItem Header="Tokens">
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="500"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="Margin" Value="5"/>
                                </Style>
                            </Grid.Resources>
                            <TextBlock Text="Letter Token 1" Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MembershipCategory.Token1}"
                                TextWrapping="Wrap"/>

                            <TextBlock  Text="Letter Token 2" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MembershipCategory.Token2}"
                                        TextWrapping="Wrap"/>

                            <TextBlock  Text="Letter Token 3" Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MembershipCategory.Token3}"
                                        TextWrapping="Wrap"/>

                            <TextBlock Text="Letter Token 4" Grid.Row="3" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding MembershipCategory.Token4}"
                                         TextWrapping="Wrap"/>

                            <TextBlock Text="Letter Token 5" Grid.Row="4" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding MembershipCategory.Token5}"
                                        TextWrapping="Wrap"/>
                        </Grid>
                    </telerik:RadTabItem>

                </telerik:RadTabControl>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <telerik:RadBusyIndicator BusyContent="Loading..."
                              IsBusy="{Binding IsBusy, FallbackValue=True}">
        <Grid>
            <telerik:RadGridView x:Name="RadGridViewCategories"
                                  ItemsSource="{Binding MembershipCategories}"
                                  Margin="5"
                                  AutoGenerateColumns="False"
                                  SelectedItem="{Binding SelectedMembershipCategory}"
                                  ShowGroupPanel="True"
                                  CanUserDeleteRows="False"
                                  CanUserFreezeColumns="False"
                                  CanUserInsertRows="False"
                                  CanUserReorderColumns="False"
                                  CanUserResizeColumns="True"
                                  CanUserResizeRows="False"
                                  CanUserSortColumns="True"
                                  FrozenColumnsSplitterVisibility="Collapsed"
                                  IsReadOnly="True"
                                  RowIndicatorVisibility="Collapsed"
                                  RowDetailsTemplate="{StaticResource CategoryDetailsDataTemplate}">

                <telerik:RadGridView.Columns>
                    <telerik:GridViewToggleRowDetailsColumn/>

                    <telerik:GridViewDataColumn Header="Name"
                                                DataMemberBinding="{Binding Name}" />

                    <telerik:GridViewDataColumn Header="Current Category"
                                                DataMemberBinding="{Binding MembershipCategory.CurrentCategory,Converter={StaticResource BooleanToYesNoConverter}}"
                                                TextAlignment="Center">
                    </telerik:GridViewDataColumn>

                    <telerik:GridViewDataColumn Header="Style"
                                                DataMemberBinding="{Binding MembershipGroupStyle.Name}"/>

                    <telerik:GridViewDataColumn Header="Age"
                                                DataMemberBinding="{Binding MembershipGroupAge.Name}" />

                    <telerik:GridViewDataColumn Header="Group"
                                                DataMemberBinding="{Binding MembershipGroup.Name}" />

                    <telerik:GridViewDataColumn Header="Type"
                                                DataMemberBinding="{Binding CategoryType}" />

                    <telerik:GridViewDataColumn Header="Gender"
                                                DataMemberBinding="{Binding CategoryGender}" />

                        <telerik:GridViewDataColumn Width="SizeToCells">
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <telerik:RadButton Margin="0"
                                                   Command="{Binding DataContext.EditMembershipCategoryCommand, RelativeSource={RelativeSource AncestorType={x:Type telerik:RadGridView}}}"
                                                   CommandParameter="{Binding}"
                                                   Style="{DynamicResource NoChromeButton}"
                                                   BorderThickness="0">
                                    <telerik:RadButton.Content>
                                        <Image Source="{StaticResource ImageEdit26}"
                                               Width="16"
                                               Height="16" />
                                    </telerik:RadButton.Content>
                                </telerik:RadButton>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>
                    <telerik:GridViewDataColumn Width="SizeToCells">
                        <telerik:GridViewDataColumn.CellTemplate>
                            <DataTemplate>
                                <telerik:RadButton Margin="0"
                                                   Command="{Binding DataContext.DeleteMembershipCategoryCommand, RelativeSource={RelativeSource AncestorType={x:Type telerik:RadGridView}}}"
                                                   CommandParameter="{Binding}"
                                                   Style="{DynamicResource NoChromeButton}"
                                                   BorderThickness="0">
                                    <telerik:RadButton.Content>
                                        <Image Source="{StaticResource ImageDelete26}"
                                               Width="16"
                                               Height="16" />
                                    </telerik:RadButton.Content>
                                </telerik:RadButton>
                            </DataTemplate>
                        </telerik:GridViewDataColumn.CellTemplate>
                    </telerik:GridViewDataColumn>
                </telerik:RadGridView.Columns>
            </telerik:RadGridView>
        </Grid>
    </telerik:RadBusyIndicator>
</UserControl>
