<UserControl x:Class="EventManagementSystem.Views.Admin.Members.Category.MembershipCategoriesView"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <DataTemplate x:Key="CategoryDetailsDataTemplate">
            <Grid Height="500">
                <telerik:RadTabControl>
                    <telerik:RadTabControl.Resources>
                        <Style TargetType="{x:Type telerik:RadGridView}">
                            <Setter Property="GroupRenderMode"
                                    Value="Flat" />
                            <Setter Property="CanUserFreezeColumns"
                                    Value="False" />
                            <Setter Property="ScrollMode"
                                    Value="RealTime" />
                            <Setter Property="GridLinesVisibility"
                                    Value="None" />
                            <Setter Property="BorderThickness"
                                    Value="0" />
                            <Setter Property="AutoGenerateColumns"
                                    Value="False" />
                            <Setter Property="ShowColumnHeaders"
                                    Value="False" />
                            <Setter Property="IsReadOnly"
                                    Value="True" />
                            <Setter Property="ShowGroupPanel"
                                    Value="False" />
                            <Setter Property="CanUserSelect"
                                    Value="False" />
                            <Setter Property="RowIndicatorVisibility"
                                    Value="Collapsed" />
                            <Setter Property="RowStyle">
                                <Setter.Value>
                                    <Style TargetType="telerik:GridViewRow">
                                        <Setter Property="Margin"
                                                Value="0" />
                                        <Setter Property="FontSize"
                                                Value="12" />
                                    </Style>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </telerik:RadTabControl.Resources>
                    <telerik:RadTabItem Header="Group Defaults">
                        <Grid Margin="15,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.Resources>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Margin" Value="5"/>
                                </Style>
                            </Grid.Resources>
                            <TextBlock Text="Name" Grid.Column="0" Grid.Row="0" FontWeight="Bold"/>
                            <TextBlock Text="{Binding MembershipCategoryGroupDefault.Name}" Grid.Column="1" Grid.Row="0" />

                            <TextBlock Text="Description" Grid.Column="2" Grid.Row="0" FontWeight="Bold"/>
                            <TextBlock  Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Description}" Grid.Column="3" Grid.Row="0"
                                      MaxWidth="400"  TextWrapping="Wrap"/>

                            <TextBlock Text="Member On Bank Holidays" Grid.Column="0" Grid.Row="1" FontWeight="Bold"/>
                            <TextBlock Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MemberOnBankHolidays,Converter={StaticResource BooleanToYesNoConverter}}"
                                       Grid.Column="1" Grid.Row="1"/>

                            <TextBlock Text="Member At Christmas Week" Grid.Column="2" Grid.Row="1" FontWeight="Bold"/>
                            <TextBlock Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MemberAtChristmasWeek,Converter={StaticResource BooleanToYesNoConverter}}"
                                       Grid.Column="3" Grid.Row="1"/>

                            <TextBlock Text="Days Available" Grid.Column="0" Grid.Row="2" FontWeight="Bold"/>
                            <TextBlock Text="{Binding MembershipCategoryGroupDefault.DaysAvailable}" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3"
                                       TextWrapping="Wrap"/>

                            <GroupBox Header="Tokens" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"
                                      Foreground="Black" Margin="0 5 0 5">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="350"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="350"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Margin" Value="5"/>
                                        </Style>
                                    </Grid.Resources>
                                    <TextBlock Text="Group Token 1"  Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token1}" TextWrapping="Wrap"/>

                                    <TextBlock Text="Group Token 2"  Grid.Row="0" Grid.Column="2" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token2}" TextWrapping="Wrap"/>

                                    <TextBlock Text="Group Token 3"  Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token3}" TextWrapping="Wrap"/>

                                    <TextBlock Text="Group Token 4"  Grid.Row="1" Grid.Column="2" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token4}" TextWrapping="Wrap"/>

                                    <TextBlock Text="Group Token 5"  Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"  Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.Token5}" TextWrapping="Wrap"/>

                                </Grid>
                            </GroupBox>

                            <GroupBox Header="EPOS" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4"
                                      Foreground="Black" Margin="0 5 0 5">
                                <Grid Margin="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.Resources>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="Margin" Value="5"/>
                                        </Style>
                                    </Grid.Resources>

                                    <TextBlock Text="Allowed Club Card" Grid.Column="0" Grid.Row="0" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.AllowedClubCard,
                                               Mode=TwoWay,Converter={StaticResource BooleanToYesNoConverter}}"/>

                                    <TextBlock Text="Points Based Membership" Grid.Column="2" Grid.Row="0" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.PointsBasedMembership,
                                        Mode=TwoWay,Converter={StaticResource BooleanToYesNoConverter}}"/>

                                    <TextBlock Text="Display Message" Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DisplayMessage}"
                                               MaxWidth="600" TextWrapping="Wrap"/>

                                    <TextBlock Text="Overdraft Limit 1" Grid.Column="0" Grid.Row="2" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.OverdraftLimit1}" />

                                    <TextBlock Text="Overdraft Limit 2" Grid.Column="2" Grid.Row="2" FontWeight="Bold"/>
                                    <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.OverdraftLimit2}" />

                                    <GroupBox Header="Product Discounts" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4"
                                      Foreground="Black" Margin="0 10 0 10">
                                        <Grid Margin="20 20 0 0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <Grid.Resources>
                                                <Style TargetType="{x:Type TextBlock}">
                                                    <Setter Property="Margin" Value="5"/>
                                                </Style>
                                            </Grid.Resources>
                                            <TextBlock Text="Discount Rate All"  Grid.Row="0" Grid.Column="0" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRateAll, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                                            <TextBlock Text="Discount Rate 1"  Grid.Row="0" Grid.Column="2" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate1, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                                            <TextBlock Text="Discount Rate 2"  Grid.Row="1" Grid.Column="0" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate2, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                                            <TextBlock Text="Discount Rate 3"  Grid.Row="1" Grid.Column="2" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate3, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                                            <TextBlock Text="Discount Rate 4"  Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate4, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                                            <TextBlock Text="Discount Rate 5"  Grid.Row="2" Grid.Column="2" FontWeight="Bold"/>
                                            <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding MembershipCategoryGroupDefault.MembershipCategoryGroupDefault.MembershipCategoryGroupDefaultEPOS.DiscountRate5, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                                        </Grid>
                                    </GroupBox>
                                </Grid>
                            </GroupBox>
                        </Grid>
                    </telerik:RadTabItem>

                    <telerik:RadTabItem Header="Full Payment Costs">
