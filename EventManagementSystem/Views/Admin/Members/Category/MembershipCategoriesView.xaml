                            <StackPanel Grid.Row="2" Grid.Column="2" Orientation="Horizontal"
                                        Visibility="{Binding MembershipFullPaymentComponent.Product2,Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipFullPaymentComponent.Product2.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                            </StackPanel>
                            <TextBlock Text="Component 4" Grid.Row="3" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding MembershipFullPaymentComponent.Product3.Name}"/>
                            <StackPanel Grid.Row="3" Grid.Column="2" Orientation="Horizontal"                                                            
                                        Visibility="{Binding MembershipFullPaymentComponent.Product3,Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipFullPaymentComponent.Product3.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                            </StackPanel>
                            <TextBlock Text="Component 5" Grid.Row="4" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Grid.Row="4" Text="{Binding MembershipFullPaymentComponent.Product4.Name}"/>
                            <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Horizontal"
                                        Visibility="{Binding MembershipFullPaymentComponent.Product4,Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipFullPaymentComponent.Product4.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                            </StackPanel>
                            <TextBlock Text="Component 6" Grid.Row="5" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Grid.Row="5" Text="{Binding MembershipFullPaymentComponent.Product5.Name}"/>
                            <StackPanel Grid.Row="5" Grid.Column="2" Orientation="Horizontal"
                                        Visibility="{Binding MembershipFullPaymentComponent.Product5,Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipFullPaymentComponent.Product5.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                            </StackPanel>
                            <TextBlock Text="Component 7" Grid.Row="6" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Grid.Row="6" Text="{Binding MembershipFullPaymentComponent.Product6.Name}"/>
                            <StackPanel Grid.Row="6" Grid.Column="2" Orientation="Horizontal"
                                        Visibility="{Binding MembershipFullPaymentComponent.Product6,Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipFullPaymentComponent.Product6.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                            </StackPanel>
                            <TextBlock Text="Component 8" Grid.Row="7" Grid.Column="0" FontWeight="Bold"/>
                            <TextBlock Grid.Column="1" Grid.Row="7" Text="{Binding MembershipFullPaymentComponent.Product7.Name}"/>
                            <StackPanel Grid.Row="7" Grid.Column="2" Orientation="Horizontal"
                                        Visibility="{Binding MembershipFullPaymentComponent.Product7,Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipFullPaymentComponent.Product7.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>
                            </StackPanel>

                            <StackPanel Grid.Row="8" Grid.Column="2" Orientation="Horizontal" 
                                        Visibility="{Binding MembershipFullPaymentComponent.IsAnyFullPaymentComponent, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <TextBlock Text="Total" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipFullPaymentComponent.TotalPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>
                            </StackPanel>
                        </Grid>
                    </telerik:RadTabItem>

