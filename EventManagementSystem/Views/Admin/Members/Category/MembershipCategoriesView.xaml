                            <StackPanel Grid.Row="5" Grid.Column="2" Orientation="Horizontal"
                                        Visibility="{Binding MembershipMonthlyPaymentUpFrontCost.Product5,Converter={StaticResource NullToVisibilityConverter}}">
                                <TextBlock Text="Price" FontWeight="Bold"/>
                                <TextBlock Text="{Binding MembershipMonthlyPaymentUpFrontCost.Product5.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

