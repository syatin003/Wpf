                                <TextBlock Text="{Binding MembershipFullPaymentComponent.Product1.GrossPrice, ConverterCulture=en-GB, StringFormat={}{0:C2}}"/>

                            </StackPanel>
                            <TextBlock  Text="Component 3" Grid.Row="2" Grid.Column="0" FontWeight="Bold"/>
